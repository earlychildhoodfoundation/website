{% css %}
.column-index-2::after,
.column-index-3::after {
  content: "";
  display: block;
  height: 5%; /* The amount you're translating the other columns */
  transform: translateY(-5%);
}
{% endcss %}

<section class="lg:pt-6 pb-6 lg:pb-24 2xl:pb-24 bg-gradient-to-b from-slate-50 dark:from-slate-800 dark:to-blue-950 dark:via-sky-950 [clip-path:polygon(0_0,_100%_0,_100%_99%,_0_100%)] lg:[clip-path:polygon(0_0,_100%_0,_100%_96%,_0_100%)] 2xl:[clip-path:polygon(0_0,_100%_0,_100%_93%,_0_100%)]" tabindex="-1">
  <div class="max-w-screen-xl mx-auto px-4 pb-20">
    <h2 id="program-guidelines" class="font-display text-red-600 dark:text-red-400 text-3xl">Program Guidelines</h2>
    <p class="text-xl">The Foundation provides funding in the following areas</p>
  </div>
  <ul class="mt-2 mb-8 flex flex-col md:flex-row lg:gap-1 max-2xl:flex-wrap justify-center isolate 2xl:px-24">
    {%- for guideline in data.guidelines %}
      <li class="px-6 pt-4 pb-12 lg:rounded-2xl md:flex-grow-0 md:flex-shrink 2xl:flex-grow lg:basis-[490px] xl:basis-[550px] {{ guideline.translationClass }} column-index-{{loop.index}}">
        <img alt="" src="{{ site.imgDir }}{{ guideline.image.file }}" class=" border-8 border-[12px] rounded-2xl mx-auto {{ guideline.image.rotationClass }} {{ guideline.image.borderColorClass }}  2xl:-translate-y-12"/>
        <div class="relative mt-4 {{guideline.paragraphClass}}">
          <h3 class="text-3xl text-center font-semibold {{ guideline.titleClass }} font-display">
            <span class="text-highlight px-10 py-1">{{ guideline.title }}</span></h3>
          {%- for paragraph in guideline.paragraphs %}
            <p class="mt-4 text-2xl">{{ paragraph | safe }}</p>
          {%- endfor %}
        </div>
      </li>
    {%- endfor %}
  </ul>
</section>