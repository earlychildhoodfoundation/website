<section class="text-2xl px-6" tabindex="-1">
  <div class="content">
    <h2 id="grant-recipients" class="font-display text-red-600 text-3xl">Grant Recipients</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-6 gap-[2px] rounded-2xl overflow-clip">
      {%- for grant in grants | sort(false, false, 'year' | reverse) %}
        <div class="smol-card-component bg-blue-800 text-white">
          <div class="text-lg px-4 text-blue-200">{{ grant.organization }}</div>
          <div class="text-lg px-4 text-blue-200">{{ grant.year }}</div>
          <div class="text-2xl px-4 py-4 font-semibold">{{ grant.project }}</div>
          <div class="font-display text-3xl mt-auto px-4 pt-2">${{ grant.amount | commaNumber }}</div>
        </div>
      {%- endfor %}
    </div>
  </div>
</section>