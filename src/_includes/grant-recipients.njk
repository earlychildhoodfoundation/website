{%- set heading = 'Grant Recipients' %}
{%- set end = 8 %}

<section class="px-6 pt-12 text-2xl" tabindex="-1" aria-labelledby="grant-recipients">
  <div class="mx-auto max-w-screen-2xl">
    <h2 id="grant-recipients" class="font-display text-red-600 dark:text-red-400 text-4xl">{{ heading }}</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {%- for grant in grants | sort(false, false, 'year') | reverse | limit(start, end) %}
        <div class="border-t border-slate-400 xl:pr-16">
          <div class="text-3xl pt-4 font-semibold text-slate-800 dark:text-slate-100 text-balance">{{ grant.project| formatTitle }}</div>
          <div class="text-2xl pb-8 text-slate-600 dark:text-slate-300">{{ grant.organization }} — {{ grant.year }} · ${{ grant.amount | commaNumber }}</div>
        </div>
      {%- endfor %}
    </div>
    <div class="mt-12">
      <a href="/grants" class="me-2 rounded-full border-4 border-blue-400 bg-blue-700 px-4 py-2 text-center text-xl text-white transition duration-200 hover:border-blue-500 hover:bg-blue-900 focus:outline-none focus:ring-4 focus:ring-purple-400 lg:text-2xl lg:font-medium dark:focus:ring-purple-800 inline-block">
      All Grant Recipients by Year →</a>
    </div>
  </div>
</section>