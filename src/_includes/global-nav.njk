{%- set isHomepage = page.url == "/" -%}

<header class="mx-[2vw] 3xl:mx-auto max-w-[2000px] px-[2vw]">
  <nav class="global-nav flex py-4">
    <div class="ms-0 me-auto" data-home {{ 'aria-current=page' if isHomepage }}>
      {%- if isHomepage %}
        {% include "partials/jdw-logo.svg" %}
      {%- else  %}
        <a href="/">{% include "partials/jdw-logo.svg" %}</a>
      {%- endif %}
    </div>
    <ul class="flex flex-col sm:flex-row max-sm:items-end sm:items-center text-slate-400  text-lg  font-medium max-sm:divide-y max-sm:divide-slate-800  list-none" role="list">
      {% for item in site.navigation %}
        {%- set paddingY = 'max-sm:pt-0 max-sm:pb-3' if loop.first else 'max-sm:py-3'  %}
        <li {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
          {%- if item.url == page.url %}
            <span class="inline-block px-8 {{ paddingY }}">{{ item.label }}</span>
          {%- else  %}
            <a class="inline-block px-8 {{ paddingY }}" href="{{ item.url }}">{{ item.label }}</a>
          {%- endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>